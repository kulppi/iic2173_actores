extends layout

block content
    h1 Movies

    if movies.length
        p Here are the current movies:
        ul.movies
            for movie in movies
                li.movie
                    a(href='/movies/#{movie.id}') #{movie.name}
    else
        p There are no movies currently.

    form(action='', method='POST')
        p Create a new movie:
        input(type='text', name='name', placeholder='Name', required)
        input(type='submit', value='Create')
